<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "businesscard"
        version     = "1.0.1" >

    <name>Businesscard</name>
    <description>My businesscard</description>
    <author href="http://mypersonalwebsite.com" email="johnbrown@gmail.com">
        Joanna Pełeńska
    </author>

    <platform name="android">
        <icon src="www/img/icon.png"/>
        <splash src="img/splashscreen.png" density="port-hdpi"/>
        <splash src="img/splashscreen.png" density="port-ldpi"/>
        <splash src="img/splashscreen.png" density="port-mdpi"/>
        <splash src="img/splashscreen.png" density="port-xhdpi"/>
    </platform>

    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />

    <plugin name="cordova-plugin-device" spec="2.0.1" />
    <plugin name="cordova-plugin-dialogs" spec="2.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="5.0.2" />
</widget>